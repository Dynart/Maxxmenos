@model IEnumerable<Maxxmenos.Models.Cliente>

@{
    ViewData["Title"] = "Index";
}

<div class="col-md-8 mx-auto mt-2">
    <h3>Lista de Clientes</h3>
    <a class="btn btn-secondary text-light mb-2" asp-action="Create">Create New</a>

    <table id="table_id" class="display mt-2">
        <thead>
            <tr>
                <th>
                    Cedula
                </th>
                <th>
                    Nombre
                </th>
                <th>
                    Apellidos
                </th>
                <th>
                    Direccion
                </th>
                <th>
                    Telefono
                </th>
                <th>
                    Email
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Cedula)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Apellidos)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Direccion)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Telefono)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Cedula">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.Cedula">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.Cedula">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    @section scripts{
        <script>
    $('#table_id').DataTable({
        "processing": true,
        "searching": false

    });
        </script>
    }

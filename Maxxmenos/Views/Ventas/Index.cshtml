@model IEnumerable<Maxxmenos.Models.Venta>

@{
    ViewData["Title"] = "Index";
}

<div class="col-md-8 mx-auto mt-2">
    <h3>Lista de Productos</h3>
    <a class="btn btn-secondary text-light mb-2" asp-action="Create">Create New</a>

    <table id="table_id" class="display mt-2">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Fecha)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Clientes)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Producto)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Fecha)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Clientes.Cedula)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Producto.IdProducto)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.IdVenta">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.IdVenta">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.IdVenta">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    @section scripts{
        <script>
            $('#table_id').DataTable({
                "processing": true,
                "searching": false

            });
        </script>
    }

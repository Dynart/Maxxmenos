@model IEnumerable<Maxxmenos.Models.Categoria>

@{
    ViewData["Title"] = "Index";
}



<div class="col-md-6 mx-auto mt-2">
    <h3>Categorias</h3>

    <a div class="btn btn-secondary text-light" asp-action="Create">Create New</a>

    <table class="table ">
        <thead>
            <tr>
                <th>
                    Nombre de Categoria
                </th>
                <th>
                    Descripcion
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Descripcion)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.IdCategoria">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.IdCategoria">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.IdCategoria">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
